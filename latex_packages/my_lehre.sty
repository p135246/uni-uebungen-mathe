% Ableitung
\newcommand{\Abl}{\@ifstar\@@Abl\@Abl} % \Abl[2]{x^2}{x}
\newcommand{\@Abl}[3][]{\ifx\\#1\\
    \frac{\operatorname{d#2}}{\operatorname{d#3}}
  \else
    \frac{\operatorname{d^{#1}#2}}{\operatorname{d#3}^{#1}}
  \fi
} % Als Quotient
\newcommand{\@@Abl}[3][]{\ifx\\#1\\
    \frac{\operatorname{d}}{\operatorname{d#3}}#2
  \else
    \frac{\operatorname{d^{#1}}}{\operatorname{d#3}^{#1}}#2
  \fi
} % Als Operator

% Partial Ableitung
\newcommand{\PAbl}{\@ifstar\@@PAbl\@PAbl} % \PAbl[2]{x^2}{x}
\newcommand{\@PAbl}[3][]{\ifx\\#1\\
    \frac{\operatorname{\partial #2}}{\operatorname{\partial #3}}
  \else
    \frac{\operatorname{\partial^{#1}#2}}{\operatorname{\partial #3}^{#1}}
  \fi
} % Als Quotient
\newcommand{\@@PAbl}[3][]{\ifx\\#1\\
    \frac{\operatorname{\partial}}{\operatorname{\partial #3}}#2
  \else
    \frac{\operatorname{\partial^{#1}}}{\operatorname{\partial #3}^{#1}}#2
  \fi
} % Als Operator

% Doppelte Partial Ableitung
\newcommand{\PPAbl}{\@ifstar\@@PPAbl\@PPAbl} 
\newcommand{\@PPAbl}[3]{\frac{\operatorname{\partial^2 #1}}{\operatorname{\partial #2\partial #3}}}
\newcommand{\@@PPAbl}[3]{\frac{\operatorname{\partial^2}}{\operatorname{\partial #2\partial #3}}#1}

